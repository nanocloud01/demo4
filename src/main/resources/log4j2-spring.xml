<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender en JSON para ELK -->
        <Console name="Console" target="SYSTEM_OUT">
            <JsonLayout eventEol="true" compact="true" includeStacktrace="true">
                <KeyValuePair key="traceId" value="%X{traceId}"/>
                <KeyValuePair key="logger" value="%c"/>
                <KeyValuePair key="thread" value="%t"/>
                <KeyValuePair key="level" value="%p"/>
                <KeyValuePair key="message" value="%m"/>
                <KeyValuePair key="service" value="mi-servicio-springboot"/>
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}" />
                <KeyValuePair key="pod_name" value="${env:POD_NAME:-local}" />
            </JsonLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.ejemplo" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
